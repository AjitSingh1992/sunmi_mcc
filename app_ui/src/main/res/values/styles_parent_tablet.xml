<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
    Styles in here are intended to only be used as a parent within another style (to prevent duplication).
    So these shouldn't be used within a layout, the __ is to discourage that.

    You could put the font sizes in dimens, but there's no need really
    -->

    <style name="__Text_Very_Bold">
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="__Text_Bold">
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
    </style>

    <style name="__Text_Regular">
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>



    <style name="__Text_XXXLarge_Bold" parent="__Text_Very_Bold">
        <item name="android:textSize">@dimen/text_xxxlarge_bold</item>
    </style>

    <style name="__Text_Large_Bold" parent="__Text_Very_Bold">
        <item name="android:textSize">@dimen/text_large_bold</item>
    </style>



    <style name="__Text_XXLarge_Bold" parent="__Text_Bold">
        <item name="android:textSize">@dimen/text_xxlarge_bold</item>
    </style>

    <style name="__Text_XLarge_Bold" parent="__Text_Bold">
        <item name="android:textSize">@dimen/text_xlarge_bold</item>
    </style>



    <style name="__Text_XLarge_Regular" parent="__Text_Regular">
        <item name="android:textSize">@dimen/text_xlarge_regular</item>
    </style>

    <style name="__Text_Large_Regular" parent="__Text_Regular">
        <item name="android:textSize">@dimen/text_large_regular</item>
    </style>

    <style name="__Text_Small_Regular" parent="__Text_Regular">
        <item name="android:textSize">@dimen/text_small_regular</item>
        <item name="android:letterSpacing">0.1</item>
    </style>



    <style name="__Button_Medium_Bold" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">@dimen/text_medium_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">120sp</item>
    </style>

</resources>
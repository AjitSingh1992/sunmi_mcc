<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="data"
            type="com.easyfoodvone.app_common.viewdata.DataPageDeliverySettingsAndPostcodes" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_grey">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/bg_white"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="wrap">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="32dp"
                android:paddingBottom="32dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:contentDescription="@string/delivery_settings_content_desc_location_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_location"/>

                    <TextView
                        style="@style/Text_XLarge_Bold_Black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_settings_miles_title"
                        android:layout_marginStart="16dp"/>

                    <EditText
                        android:id="@+id/distance"
                        style="@style/Text_XLarge_Bold_Orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="6"
                        android:minWidth="52dp"
                        android:gravity="center"
                        android:background="@drawable/rectangle_variant_border"
                        android:padding="8dp"
                        android:layout_marginStart="16dp"
                        android:autofillHints=""
                        android:inputType="number"
                        android:text="@={data.inputMiles}"
                        tools:ignore="LabelFor" />

                    <TextView
                        style="@style/Text_Large_Regular_Grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_settings_miles_1_6_suffix"
                        android:gravity="center"
                        android:padding="8dp"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UseCompoundDrawables"
                    android:gravity="center"
                    android:layout_marginTop="24dp">

                    <ImageView
                        android:contentDescription="@string/delivery_settings_content_desc_location_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_clock"/>

                    <TextView
                        style="@style/Text_XLarge_Bold_Black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_settings_average_delivery_time_title"
                        android:layout_marginStart="16dp"/>

                    <EditText
                        android:id="@+id/deliveryTime"
                        style="@style/Text_XLarge_Bold_Orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="30"
                        android:gravity="center"
                        android:minWidth="52dp"
                        android:background="@drawable/rectangle_variant_border"
                        android:padding="8dp"
                        android:text="@={data.inputDeliveryTime}"
                        android:layout_marginStart="16dp"
                        android:autofillHints=""
                        android:inputType="number"
                        tools:ignore="LabelFor" />

                    <TextView
                        style="@style/Text_Large_Regular_Grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_settings_avg_delivery_time_minutes_suffix"
                        android:gravity="center"
                        android:padding="8dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Text_Large_Regular_Black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/delivery_settings_delivery_charge"
                            android:layout_marginStart="16dp"/>

                        <EditText
                            style="@style/Text_XLarge_Bold_Orange"
                            android:id="@+id/etDeliveryCharge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="10.00"
                            android:gravity="center"
                            android:background="@drawable/rectangle_variant_border"
                            android:padding="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:text="@={data.inputDeliveryCharge}"
                            android:autofillHints=""
                            android:inputType="numberDecimal"
                            tools:ignore="LabelFor" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Text_Large_Regular_Black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/delivery_settings_min_order_value"
                            android:layout_marginStart="16dp"/>


                        <EditText
                            style="@style/Text_XLarge_Bold_Orange"
                            android:id="@+id/etMinimumOrder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="10.00"
                            android:gravity="center"
                            android:background="@drawable/rectangle_variant_border"
                            android:padding="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:text="@={data.inputMinOrder}"
                            android:autofillHints=""
                            android:inputType="numberDecimal"
                            tools:ignore="LabelFor"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Text_Large_Regular_Black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/delivery_settings_free_delivery"
                            android:layout_marginStart="16dp"/>

                        <EditText
                            android:id="@+id/etFreeDelivery"
                            style="@style/Text_XLarge_Bold_Orange"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="10.00"
                            android:gravity="center"
                            android:background="@drawable/rectangle_variant_border"
                            android:padding="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:text="@={data.inputFreeDelivery}"
                            android:autofillHints=""
                            android:inputType="numberDecimal"
                            tools:ignore="LabelFor"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Text_Large_Regular_Black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="@string/delivery_settings_average_preparation_time"
                            android:layout_marginStart="16dp"/>

                        <EditText
                            android:id="@+id/etAvgPrepTime"
                            style="@style/Text_XLarge_Bold_Orange"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="10.00"
                            android:gravity="center"
                            android:background="@drawable/rectangle_variant_border"
                            android:padding="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:text="@={data.inputAvgPrepTime}"
                            android:autofillHints=""
                            android:inputType="numberDecimal"
                            tools:ignore="LabelFor"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    style="@style/Button_Orange_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:onClick="@{() -> data.outputEvents.onClickUpdate()}"
                    android:text="@string/delivery_settings_button_update"/>

                <TextView
                    style="@style/Text_XLarge_Bold_Orange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/delivery_settings_postcodes_within_3_miles"
                    android:layout_marginStart="16dp"/>

                <CheckBox
                    android:id="@+id/chechbox_set_for_all"
                    style="@style/Text_XLarge_Bold_Black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingStart="16dp"
                    android:checked="@={data.allPostcodesChecked}"
                    android:text="@string/delivery_settings_checkbox_all_postcodes"
                    android:layout_marginStart="16dp"/>

                <LinearLayout
                    android:background="@color/bg_grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        style="@style/Text_Large_Regular_Black"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/delivery_settings_list_header_postcode"
                        android:padding="16dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        style="@style/Text_Large_Regular_Black"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/delivery_settings_list_header_min_order_value"
                        android:padding="16dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        style="@style/Text_Large_Regular_Black"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/delivery_settings_list_header_delivery_charges"
                        android:padding="16dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        style="@style/Text_Large_Regular_Black"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/delivery_settings_list_header_free_delivery"
                        android:padding="16dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        style="@style/Text_Large_Regular_Black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/delivery_settings_list_header_action"
                        android:padding="16dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_time_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/row_delivery_settings_postcode_list"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
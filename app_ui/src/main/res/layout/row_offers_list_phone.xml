<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp">

        <TextView
            style="@style/Phone_Text_Large_Bold_Black"
            android:id="@+id/offer_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="NA" />

        <TextView
            style="@style/Phone_Text_Large_Bold_Black"
            android:id="@+id/start_end_date"
            android:layout_width="80sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_horizontal"
            android:text="NA" />

        <TextView
            style="@style/Phone_Text_Large_Bold_Black"
            android:id="@+id/day_of_week"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:gravity="center_horizontal"
            android:text="NA" />

        <TextView
            style="@style/Phone_Text_Large_Bold_Black"
            android:id="@+id/min_order_amt"
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="NA" />

        <LinearLayout
            android:layout_width="63sp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_baseline_edit_24"
                android:text="" />

            <Button
                android:id="@+id/btn_del"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_baseline_delete_outline_24"
                android:text="" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/rectangle_variant_border_black"
    android:minHeight="@dimen/_30sdp"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">
    <View
        android:layout_width="@dimen/_5sdp"
        android:layout_height="match_parent"
        android:background="@color/bg_orange"/>
    <TextView
        android:id="@+id/post_code"
        style="@style/Phone_Text_Large_Regular_Grey"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        tools:text="SN5"
        android:padding="5dp"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/min_order_val"
        style="@style/Phone_Text_Large_Regular_Grey"
        android:layout_width="0dp"
        android:layout_weight="1"
        tools:text="£1.00"
        android:padding="5dp"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/delivery_charge"
        style="@style/Phone_Text_Large_Regular_Grey"
        android:layout_width="0dp"
        android:layout_weight="1"
        tools:text="£1.00"
        android:padding="5dp"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/free_delivery"
        style="@style/Phone_Text_Large_Regular_Grey"
        android:layout_width="0dp"
        android:layout_weight="1"
        tools:text="£20.00"
        android:padding="5dp"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn_edit"
            android:contentDescription="@string/delivery_settings_content_desc_postcode_item_action"
            android:layout_width="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_edit_24"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_height="24dp" />

        <ImageView
            android:id="@+id/btn_del"
            android:contentDescription="@string/delivery_settings_content_desc_postcode_item_action"
            android:layout_width="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_baseline_delete_outline_24"
            android:layout_height="24dp"/>
    </LinearLayout>
</LinearLayout>
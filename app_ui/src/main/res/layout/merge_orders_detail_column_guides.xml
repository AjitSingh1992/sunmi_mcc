<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/row_order_detail">

    <Space
        android:id="@+id/guideColumn1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideColumn2"
        app:layout_constraintHorizontal_weight="3" />

    <Space
        android:id="@+id/guideColumn2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/guideColumn1"
        app:layout_constraintEnd_toStartOf="@+id/guideColumn3"
        app:layout_constraintHorizontal_weight="1" />

    <Space
        android:id="@+id/guideColumn3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="55dp"
        app:layout_constraintStart_toEndOf="@+id/guideColumn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1" />

</merge>

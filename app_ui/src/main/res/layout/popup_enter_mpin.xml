<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/Text_XLarge_Bold_Black"
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:padding="10dp"
        android:maxWidth="400sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            style="@style/Text_XLarge_Bold_Orange"
            android:id="@+id/mpin_first"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/rectangle_border_thick"
            android:focusable="true"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            style="@style/Text_XLarge_Bold_Orange"
            android:id="@+id/mpin_two"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_margin="9dp"
            android:background="@drawable/rectangle_border_thick"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            style="@style/Text_XLarge_Bold_Orange"
            android:id="@+id/mpin_three"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_margin="9dp"
            android:background="@drawable/rectangle_border_thick"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            style="@style/Text_XLarge_Bold_Orange"
            android:id="@+id/mpin_four"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_marginStart="9dp"
            android:background="@drawable/rectangle_border_thick"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1" />

    </LinearLayout>

    <TextView
        style="@style/Text_Small_Regular_Error"
        android:id="@+id/txt_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Please enter correct 4 digit pin code."
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            style="@style/Button_Orange_Bold"
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="center"
            android:text="OK" />

        <Space
            android:layout_width="30dp"
            android:layout_height="0dp" />

        <Button
            style="@style/Button_White_Bold"
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center"
            android:text="Cancel" />

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="data"
            type="com.easyfoodvone.app_common.viewdata.DataPageDeliverySettingsAndPostcodes" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="wrap">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp">

                    <TextView
                        style="@style/Phone_Text_XLarge_Bold_Black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_settings_area_title"
                        android:layout_marginStart="8dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minWidth="72dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/distance"
                            style="@style/Phone_Text_XLarge_Bold_Orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="6"
                            android:minWidth="52dp"
                            android:gravity="center"
                            android:background="@drawable/rectangle_variant_border"
                            android:padding="8dp"
                            android:autofillHints=""
                            android:inputType="number"
                            android:text="@={data.inputMiles}"
                            tools:ignore="LabelFor" />

                        <TextView
                            style="@style/Phone_Text_Large_Regular_Grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery_settings_miles_1_6_suffix"
                            android:gravity="center"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_grey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="8dp">

                    <TextView
                        style="@style/Phone_Text_XLarge_Bold_Black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_settings_average_preparation_time"
                        android:layout_marginStart="8dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minWidth="72dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etAvgPrepTime"
                            style="@style/Phone_Text_XLarge_Bold_Orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="6"
                            android:minWidth="52dp"
                            android:gravity="center"
                            android:background="@drawable/rectangle_variant_border"
                            android:padding="8dp"
                            android:autofillHints=""
                            android:inputType="number"
                            android:text="@={data.inputAvgPrepTime}"
                            tools:ignore="LabelFor" />

                        <TextView
                            style="@style/Phone_Text_Large_Regular_Grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery_settings_avg_delivery_time_minutes_suffix"
                            android:gravity="center"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_grey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:gravity="center">

                    <TextView
                        style="@style/Phone_Text_XLarge_Bold_Black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_settings_average_delivery_time_title"
                        android:layout_marginStart="8dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minWidth="72dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/deliveryTime"
                            style="@style/Phone_Text_XLarge_Bold_Orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="6"
                            android:minWidth="52dp"
                            android:gravity="center"
                            android:background="@drawable/rectangle_variant_border"
                            android:padding="8dp"
                            android:autofillHints=""
                            android:inputType="number"
                            android:text="@={data.inputDeliveryTime}"
                            tools:ignore="LabelFor" />

                        <TextView
                            style="@style/Phone_Text_Large_Regular_Grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery_settings_avg_delivery_time_minutes_suffix"
                            android:gravity="center"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_grey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:gravity="center">

                    <TextView
                        style="@style/Phone_Text_XLarge_Bold_Black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_settings_delivery_charge"
                        android:layout_marginStart="8dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minWidth="72dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etDeliveryCharge"
                            style="@style/Phone_Text_XLarge_Bold_Orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="6"
                            android:minWidth="52dp"
                            android:gravity="center"
                            android:background="@drawable/rectangle_variant_border"
                            android:padding="8dp"
                            android:autofillHints=""
                            android:inputType="numberDecimal"
                            android:text="@={data.inputDeliveryCharge}"
                            tools:ignore="LabelFor" />

                        <TextView
                            style="@style/Phone_Text_Large_Regular_Grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery_settings_pound_symbol"
                            android:gravity="center"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_grey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:gravity="center">

                    <TextView
                        style="@style/Phone_Text_XLarge_Bold_Black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_settings_min_order_value"
                        android:layout_marginStart="8dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minWidth="72dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etMinimumOrder"
                            style="@style/Phone_Text_XLarge_Bold_Orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="6"
                            android:minWidth="52dp"
                            android:gravity="center"
                            android:background="@drawable/rectangle_variant_border"
                            android:padding="8dp"
                            android:autofillHints=""
                            android:inputType="numberDecimal"
                            android:text="@={data.inputMinOrder}"
                            tools:ignore="LabelFor" />

                        <TextView
                            style="@style/Phone_Text_Large_Regular_Grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery_settings_pound_symbol"
                            android:gravity="center"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_grey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:gravity="center">

                    <TextView
                        style="@style/Phone_Text_XLarge_Bold_Black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_settings_free_delivery"
                        android:layout_marginStart="8dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minWidth="72dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etFreeDelivery"
                            style="@style/Phone_Text_XLarge_Bold_Orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="6"
                            android:minWidth="52dp"
                            android:gravity="center"
                            android:background="@drawable/rectangle_variant_border"
                            android:padding="8dp"
                            android:autofillHints=""
                            android:inputType="numberDecimal"
                            android:text="@={data.inputFreeDelivery}"
                            tools:ignore="LabelFor" />

                        <TextView
                            style="@style/Phone_Text_Large_Regular_Grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery_settings_pound_symbol"
                            android:gravity="center"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    style="@style/Phone_Button_Orange_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="16dp"
                    android:onClick="@{() -> data.outputEvents.onClickUpdate()}"
                    android:text="@string/delivery_settings_button_update"/>

                <TextView
                    style="@style/Phone_Text_XXLarge_Bold_Black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/delivery_settings_postcodes_title"
                    android:layout_marginStart="8dp"/>

                <CheckBox
                    android:id="@+id/chechbox_set_for_all"
                    style="@style/Phone_Text_Small_Regular_Black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingStart="16dp"
                    android:checked="@={data.allPostcodesChecked}"
                    android:text="@string/delivery_settings_checkbox_all_postcodes"
                    android:layout_marginStart="16dp"/>

                <LinearLayout
                    android:background="@color/bg_grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/Phone_Text_Small_Regular_Black"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1.2"
                        android:text="@string/delivery_settings_list_header_postcode"
                        android:padding="2dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        style="@style/Phone_Text_Small_Regular_Black"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/delivery_settings_list_header_min_order_value"
                        android:padding="4dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        style="@style/Phone_Text_Small_Regular_Black"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/delivery_settings_list_header_delivery_charges"
                        android:padding="4dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        style="@style/Phone_Text_Small_Regular_Black"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/delivery_settings_list_header_free_delivery"
                        android:padding="4dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        style="@style/Phone_Text_Small_Regular_Black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/delivery_settings_list_header_action"
                        android:padding="4dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_time_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/row_delivery_settings_postcode_list_phone"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>